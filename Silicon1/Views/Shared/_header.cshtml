                ClassName = "btn-gray",
                Link = "#",
                Icon = "fa-regular fa-right-to-bracket",
                Text = "Sign in" } '/> *@
                     
@*             <partial name="~/Views/Components/_Button.cshtml" model='new ButtonViewModel {
            ClassName = "btn-theme",
            Icon = "fa-regular fa-user",
            Text = "Sign up" } ' /> *@

           </div>

        <div class="btn-mobile" onclick="toggleMenu()">
            <button>
                <i class="fa-solid fa-bars"></i>
            </button>
            <nav id="mobile-menu" class="hide">
                <ul>
                    <li><a href="#">Menu Item 1</a></li>
                    <li><a href="#">Menu Item 2</a></li>
                   
                </ul>
            </nav>
        </div>




    </div>
</header>
