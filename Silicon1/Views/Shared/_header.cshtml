@using Silicon1.Views.Components

@inject SignInManager<UserEntity> _signInManager

@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}

<header>
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index">
            <img src="~/images/@(isDark ? "Silicon-Logotype-Dark.svg" : "Silicon-Logotype-Light.svg")"  alt="Silicon Logo" />"</a>
     
        <div id="menu" class="hide">
            <nav>
                <a class="menu-link" href="#showcase">Overview</a>
                <a class="menu-link" href="#features">Features</a>

                @if (_signInManager.IsSignedIn(User))
                {
                    <a class="menu-link" asp-controller="Courses" asp-action="Index">Courses</a>
                    <a class="menu-link" asp-controller="Account" asp-action="Deets">Account</a>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="menu-link" asp-controller="Admin" asp-action="Index">Admin</a>
                    }
                }
                <a class="menu-link" asp-controller="Contact" asp-action="Index">Contact</a>

            </nav>
        </div>

        <div id="theme-switch" class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" checked="@isDark" />
                <span class="slider round"></span>  
              @*   <span class="slider round"></span> *@
            </label>
            <label>Dark</label>
        </div>
              
        <div id="account-buttons" class="hide"> 
            @if (_signInManager.IsSignedIn(User))
            {
                <a asp-controller="Auth" asp-action="SignOut" class="btn-theme"><i class="fa-regular fa-right-from-bracket"></i><span>Sign Out</span></a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="SignIn" class="btn-theme"><i class="fa-regular fa-circle-right"></i><span>Sign In</span></a>
                <a asp-controller="Auth" asp-action="SignUp" class="btn-theme"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>

            }
