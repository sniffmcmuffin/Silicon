@using Silicon1.Views.Components
<header>
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/Silicon-Logotype-Light.svg" alt="Silicon Logo" />"</a>
     
        <div id="menu" class="hide">
            <nav>
                <a class="menu-link" href="#showcase">Overview</a>
                <a class="menu-link" href="#features">Features</a>
                <a class="menu-link" asp-controller="Contact" asp-action="Index">Contact</a>
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <div class="slider round"></div>
           @*      <span class="slider round"></span> *@
            </label>
            <label>Dark</label>
        </div>

        @* Klura ut hur ändra knapparna från href tillasp-controller="Account" asp-action="SignIn" *@
        <div id="account-buttons" class="hide"> 
            <partial name="~/Views/Components/_Button.cshtml" model='new ButtonViewModel {
                ClassName = "btn-gray",
                Link = "#",
                Icon = "fa-regular fa-right-to-bracket",
                Text = "Sign in" } '/>

            <partial name="~/Views/Components/_Button.cshtml" model='new ButtonViewModel {
                ClassName = "btn-theme",
                Link = "#",
                Icon = "fa-regular fa-user",
                Text = "Sign up" } ' />
        </div>

@*         <button onclick="toggleMenu()" class="btn-mobilemenu">
            <i class="fa-regular fa-bars"></i>
        </button> *@
    </div>
</header>
