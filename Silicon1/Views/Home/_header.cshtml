@{
}

<header>
    <div class="container">
        <a id="logo" href="home.html"><img src="~/images/Silicon-Logotype-Light.svg" alt="Silicon Logo" />"</a>
     
        <div id="menu">
            <nav>
                <a class="menu-link" href="#showcase">Overview</a>
                <a class="menu-link" href="#features">Features</a>
                <a class="menu-link" href="contact.html">Contact</a>
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                @* <div class="slider round"></div> :: Gives green squiggly line. *@ 
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>

        <div class="account-buttons">
            <partial name="~/Views/Components/_Button.cshtml" model='new ButtonViewModel {
                ClassName = "btn-gray",
                Link = "#",
                Icon = "fa-regular fa-right-to-bracket",
                Text = "Sign in" } '/>

            <partial name="~/Views/Components/_Button.cshtml" model='new ButtonViewModel {
                ClassName = "btn-theme",
                Link = "#",
                Icon = "fa-regular fa-user",
                Text = "Sign up" } ' />
        </div>

    </div>
</header>
